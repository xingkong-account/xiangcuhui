<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mapper.VideoMapper">
    <!-- 插入视频 -->
    <insert id="insertVideo" parameterType="com.bean.Video">
        INSERT INTO videos
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="title != null">title,</if>
            <if test="url != null">url,</if>
            <if test="description != null">description,</if>
            <if test="thumbnail != null">thumbnail,</if>
            <if test="status != null">status,</if>
            <if test="created_at != null">created_at,</if>
            <if test="updated_at != null">updated_at,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="title != null">#{title},</if>
            <if test="url != null">#{url},</if>
            <if test="description != null">#{description},</if>
            <if test="thumbnail != null">#{thumbnail},</if>
            <if test="status != null">#{status},</if>
            <if test="created_at != null">#{created_at},</if>
            <if test="updated_at != null">#{updated_at},</if>
        </trim>
    </insert>


    <!-- 更新视频 -->
    <update id="updateVideo" parameterType="com.bean.Video">
        UPDATE videos
        <set>
            <if test="title != null">title = #{title},</if>
            <if test="url != null">url = #{url},</if>
            <if test="description != null">description = #{description},</if>
            <if test="thumbnail != null">thumbnail = #{thumbnail},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updated_at != null">updated_at = #{updated_at},</if>
            <if test="reviewed_at != null">reviewed_at = #{reviewed_at},</if>
            <if test="reviewer != null">reviewer = #{reviewer},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- 根据ID获取视频 -->
    <select id="getVideoById" parameterType="Integer" resultType="com.bean.Video">
        SELECT * FROM videos WHERE id = #{id}
    </select>

    <!-- 获取所有待审核的视频 -->
    <select id="getVideosByStatus" parameterType="String" resultType="com.bean.Video">
        SELECT * FROM videos WHERE status = #{status}
    </select>

    <!-- 获取所有视频 -->
    <select id="getAllVideos" resultType="com.bean.Video">
        SELECT * FROM videos
        WHERE status = '已审核'
    </select>

    <!-- 删除视频 -->
    <delete id="deleteVideo" parameterType="Integer">
        DELETE FROM videos WHERE id = #{id}
    </delete>

    <select id="getAllUnReviewVideos" resultType="com.bean.Video">
        SELECT * FROM videos
        WHERE status = '待审核'
    </select>

    <!-- 视频审核 -->
    <update id="reviewVideo">
        UPDATE videos
        SET status = #{status}, updated_at = #{updated_at}
        WHERE id = #{id}
    </update>
</mapper>

