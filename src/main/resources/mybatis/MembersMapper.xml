<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.MembersMapper">

    <!-- 添加会员 -->
    <insert id="add" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO members
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="type != null">type,</if>
            <if test="phone != null">phone,</if>
            <if test="password != null">password,</if>
            <if test="status != null">status,</if>
            <if test="created_at != null">created_at,</if>
            <if test="updated_at != null">updated_at,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="type != null">#{type},</if>
            <if test="phone != null">#{phone},</if>
            <if test="password != null">#{password},</if>
            <if test="status != null">#{status},</if>
            <if test="created_at != null">#{created_at},</if>
            <if test="updated_at != null">#{updated_at},</if>
        </trim>
    </insert>

    <!-- 查询个人会员 -->
    <select id="findById" parameterType="int" resultType="com.bean.Member">
        SELECT * FROM members
        WHERE id = #{id};
    </select>

    <select id="listIndividuals" resultType="com.bean.Member">
        SELECT * FROM members
        WHERE type = '个人会员';
    </select>

    <select id="selectByName" parameterType="String" resultType="com.bean.Member">
        SELECT * FROM members
        WHERE name = #{name};
    </select>

    <select id="findByNameAndPassword" parameterType="map" resultType="com.bean.Member">
        SELECT * FROM members
        WHERE name = #{name} AND password = #{password} AND type = '个人会员';
    </select>

    <update id="updateIndividual" parameterType="com.bean.Member">
        UPDATE members
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="password != null">password = #{password},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updated_at != null">updated_at = #{updated_at},</if>
        </set>
        WHERE id = #{id} AND type = '个人会员';
    </update>

    <update id="changePwdByName" parameterType="com.bean.Member">
        UPDATE members
        SET password = #{password}
        WHERE name = #{name}
    </update>

    <delete id="deleteIndividual" parameterType="int">
        DELETE FROM members
        WHERE id = #{id} AND type = '个人会员';
    </delete>

    <!-- 根据状态查询个人会员 -->
    <select id="selectMembersByStatus" resultType="com.bean.Member">
        SELECT
        id,
        name,
        type,
        phone,
        status,
        created_at,
        updated_at
        FROM
        members
        WHERE
        type = '个人会员'
        AND status = #{status}
    </select>

<!--    改变状态：已审核 or 已拒绝-->
    <update id="approveMember">
        UPDATE members
        SET status = #{status}, updated_at = #{updated_at}
        WHERE id = #{id}
    </update>

    <!-- 查询团体会员 -->
    <select id="findGroupById" parameterType="int" resultType="com.bean.Member">
        SELECT * FROM members
        WHERE id = #{id} AND type = '团体会员';
    </select>

    <select id="listGroups" resultType="com.bean.Member">
        SELECT * FROM members
        WHERE type = '团体会员';
    </select>

    <select id="selectGroupByName" parameterType="String" resultType="com.bean.Member">
        SELECT * FROM members
        WHERE name = #{name} AND type = '团体会员';
    </select>

    <update id="updateGroup" parameterType="com.bean.Member">
        UPDATE members
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="password != null">password = #{password},</if>
            <if test="status != null">status = #{status},</if>
            <if test="updated_at != null">updated_at = #{updated_at},</if>
            <if test="iamge_url != null">image_url = #{iamge_url},</if>
            <if test="description != null">description = #{description},</if>
            <if test="website != null">website = #{website},</if>
        </set>
        WHERE id = #{id} AND type = '团体会员';
    </update>

    <delete id="deleteGroup" parameterType="int">
        DELETE FROM members
        WHERE id = #{id} AND type = '团体会员';
    </delete>

    <select id="getMembersByType" resultType="com.bean.Member">
        SELECT * FROM members
        WHERE type = #{type};
    </select>

    <!-- 动态 SQL 插入团队会员 -->
    <insert id="addTeamMember" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO members
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">name,</if>
            <if test="type != null">type,</if>
            <if test="phone != null">phone,</if>
            <if test="password != null">password,</if>
            <if test="status != null">status,</if>
            <if test="description != null">description,</if>
            <if test="website != null">website,</if>
            <if test="image_url != null">image_url,</if>
            <if test="created_at != null">created_at,</if>
            <if test="updated_at != null">updated_at,</if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="name != null">#{name},</if>
            <if test="type != null">#{type},</if>
            <if test="phone != null">#{phone},</if>
            <if test="password != null">#{password},</if>
            <if test="status != null">#{status},</if>
            <if test="description != null">#{description},</if>
            <if test="website != null">#{website},</if>
            <if test="image_url != null">#{image_url},</if>
            <if test="created_at != null">#{created_at},</if>
            <if test="updated_at != null">#{updated_at},</if>
        </trim>
    </insert>
</mapper>
