<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.ImageMapper">

    <!-- 查询指定文章的图片 -->
    <select id="findByArticleId" parameterType="java.lang.Integer" resultType="com.bean.Image">
        SELECT
        id,
        article_id,
        url,
        description,
        created_at
        FROM images
        WHERE article_id = #{articleId}
    </select>

    <!-- 插入图片信息 -->
    <insert id="insert" parameterType="com.bean.Image">
        INSERT INTO images (article_id, url, description, created_at)
        VALUES (#{articleId}, #{url}, #{description}, #{createdAt})
    </insert>

    <!-- 根据文章 ID 删除所有图片 -->
    <delete id="deleteByArticleId" parameterType="java.lang.Integer">
        DELETE FROM images WHERE article_id = #{articleId}
    </delete>

</mapper>
